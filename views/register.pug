extends layout 
block content
    h1 Create an Account
    form(role='form' method='POST' action=action_url)
        div.form-group
            label(for='name') name:
            input#name.form-control(type='text', placeholder='name', name='name', required)
        div.form-group
            label(for='email') email:
            input#email.form-control(type='text', placeholder='email', name='email', required)
        div.form-group
            label(for='password') Password:
            input#password.form-control(type='password', placeholder='password', name='password', required)
        button.btn.btn-primary(type="submit", name="") Register